<!DOCTYPE html>
<html>
  <head>
    <title>Bernify</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <div>
        <% flash.each do |key, value| %>
          <div class="flash flash-<%= key %>">
            <%= value %>
          </div>
        <% end %>
      </div>
    </div>

  <div class="container-fluid">
      <%= yield :main %>
  </div>

  <%= yield :scripts %>

  </body>
</html>
